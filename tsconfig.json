{
  "include": ["lib"],
  "exclude": ["node_modules", "lib/**/*.test.ts"],
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "declaration": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
  },
}