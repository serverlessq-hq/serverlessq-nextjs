{
  "name": "@serverlessq/nextjs",
  "version": "1.0.8",
  "description": "The SDK to utilize managed queues by ServerlessQ",
  "homepage": "https://serverlessq.com",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "Serverless Queue",
    "Cron Job",
    "Vercel",
    "Serverless"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write ./lib",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "yarn lint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "pre-commit": "lint-staged",
    "prepublish": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn build"
    }
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "yarn eslint --fix --cache",
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "useTabs": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "msw": "^0.42.3",
    "prettier": "2.6.2",
    "typescript": "^4.7.4",
    "vitest": "^0.15.2"
  },
  "dependencies": {
    "axios": "^0.27.2"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serverlessq-hq/serverlessq-nextjs.git"
  },
  "author": "Alessandro Volpicella",
  "bugs": {
    "url": "https://github.com/serverlessq-hq/serverlessq-nextjs/issues"
  }
}
